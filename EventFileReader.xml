<?xml version="1.0" encoding="iso-8859-1"?>
<!-- EventFileReader.xml -->

<!-- Configuration of Module EventFileReader -->
<EventFileReader
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation='[SCHEMAPATH]/EventFileReader.xsd'>

  <ReportFilenames/>

  <!-- the list of filenames (space, tab or newline delimited) -->
  <InputFilenames>
    <!--../../../doc/SampleEvents/run-013137x001_exampleevent.raw-->
    <!--../../../doc/SampleEvents/run-009917x054_exampleevent.raw`-->
    `ls $INPUTFILE`
  </InputFilenames>

  <!-- default, silent, terse, verbose, annoying -->
  <verbosity> verbose </verbosity>

  <!-- catch exception and return eContinueLoop if true,
       return eFailure otherwise -->
  <continueOnException> 0 </continueOnException>

</EventFileReader>
